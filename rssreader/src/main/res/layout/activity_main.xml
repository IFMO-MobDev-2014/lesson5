<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:text="http://bash.im/rss/"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Show feed"
            android:onClick="onRssRequest"
            android:id="@+id/button" android:layout_below="@+id/editText" android:layout_centerHorizontal="true"/>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp"
            android:id="@+id/listView" android:layout_below="@+id/button" android:layout_centerHorizontal="true"
            tools:listitem="@layout/post_layout" tools:listheader="@layout/post_no_image_layout"/>
</RelativeLayout>
