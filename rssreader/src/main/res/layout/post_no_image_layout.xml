<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:onClick="onPostClick"
              android:layout_margin="5dp"
              android:background="#DDDDDD">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/post_noim_header" android:layout_gravity="center_horizontal"
            android:text="Headliner" android:layout_margin="10dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/post_noim_description" android:layout_gravity="center_horizontal" android:layout_margin="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="date"
            android:id="@+id/post_noim_date" android:layout_gravity="center_horizontal|right" android:textColor="#AAAAAA"/></LinearLayout>