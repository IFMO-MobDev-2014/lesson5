<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:onClick="onPostClick"
              android:layout_margin="5dp"
              android:background="#DDDDDD">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/post_header" android:layout_gravity="center_horizontal"
            android:text="Headliner" android:layout_margin="5dp"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:id="@+id/post_image" android:layout_gravity="center_horizontal" android:layout_margin="5dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="hudioteui douehi doneuthid noteud intouditnhdoenuthi onetuh inhuo iheunitoenui onuhit onteui dnoueth inoteudi euinou"
            android:id="@+id/post_description" android:layout_gravity="center_horizontal" android:layout_margin="10dp"/>
</LinearLayout>